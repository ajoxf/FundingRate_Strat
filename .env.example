# OKX API Credentials
# Get your API keys from: https://www.okx.com/account/my-api
# IMPORTANT: Only enable "Read" and "Trade" permissions. NEVER enable "Withdraw".

OKX_API_KEY=your_api_key_here
OKX_API_SECRET=your_api_secret_here
OKX_PASSPHRASE=your_passphrase_here

# Trading Configuration
# Symbol to trade (BTC-USDT-SWAP is the BTC perpetual swap)
TRADING_SYMBOL=BTC-USDT-SWAP

# Position size in contracts
POSITION_SIZE=1.0

# Strategy Parameters
# Lookback periods for mean calculation (1 period = 8 hours)
# 90 periods = 30 days of funding rate history
LOOKBACK_PERIODS=90

# Entry threshold: Open position when Z-score exceeds this value
# Higher = more selective entries, fewer trades
ENTRY_STD_DEV=2.0

# Exit threshold: Close position when Z-score returns within this value
# Lower = wait for more complete mean reversion
EXIT_STD_DEV=0.2

# Stop loss threshold: Close position if Z-score exceeds this value
# Higher = wider stop, more room for position to work
STOP_LOSS_STD_DEV=6.0

# Paper Trading Mode
# Set to "true" to simulate trades without real orders
# Set to "false" for live trading (USE WITH CAUTION)
PAPER_MODE=true

# Fee Configuration (as percentages)
# OKX fee tiers: https://www.okx.com/fees
# Default tier: Maker 0.02%, Taker 0.05%
# VIP tiers have lower fees

# Maker fee (limit orders that add liquidity)
MAKER_FEE=0.02

# Taker fee (market orders that remove liquidity)
TAKER_FEE=0.05

# Estimated slippage per trade (for cost estimation)
# BTC-USDT-SWAP typically has very tight spreads
ESTIMATED_SLIPPAGE=0.01

# Flask Configuration
FLASK_SECRET_KEY=change-this-to-a-random-secret-key
FLASK_ENV=development
FLASK_DEBUG=true

# Database
DATABASE_PATH=funding_rate.db

# Server Configuration
HOST=0.0.0.0
PORT=5000
